<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Todo"
             x:Class="Todo.MainPage">

    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry x:Name="usuarioEntry" Placeholder="Nombre de Usuario" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Ingresar" Clicked="Button_Clicked"/>
        <Label x:Name="resultadoLabel" HorizontalOptions="Center" TextColor="Red"/>
    </StackLayout>

</ContentPage>
